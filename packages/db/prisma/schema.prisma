generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ChatSession {
  id String @id @default(cuid())
  videoUrl String
  videoId String
  createdAt DateTime @default(now())
  message Message[]
}

model Message {
  id String @id @default(cuid())
  content String
  role String // User or Assistant
  chatSessionId String
  chatSession ChatSession @relation(fields: [chatSessionId], references: [id])
  createdAt DateTime @default(now())
}

